# Limits memory usage of of command. "LeMoN" 

# This function sets the memory limit to 80% of the total available memory
lemon() {
    local total_memory=$(free -t -m | grep Mem: | awk '{print $2}')
    local memory_limit=$((total_memory * 80 / 100))
    (ulimit -Sv "$memory_limit" && "$@")
}



