window-padding-x = 2
font-size = 10
mouse-hide-while-typing = true
window-theme = ghostty
confirm-close-surface = false
shell-integration-features = no-title

theme = GruvboxDarkHard
shell-integration-features = no-cursor,sudo,no-title
window-colorspace = "display-p3"
background = 1C2021
adjust-cell-height = 35%

# Navigate window splits
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

keybind = alt+e=new_split:right
keybind = alt+o=new_split:down

keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+l=resize_split:right,10

keybind = alt+shift+w=close_surface